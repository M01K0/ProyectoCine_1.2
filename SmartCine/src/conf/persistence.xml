<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SmartCinePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>sv.com.smartcine.entidades.Reservaciones</class>
    <class>sv.com.smartcine.entidades.Clasificaciones</class>
    <class>sv.com.smartcine.entidades.Sucursales</class>
    <class>sv.com.smartcine.entidades.DetalleReservaciones</class>
    <class>sv.com.smartcine.entidades.Asientos</class>
    <class>sv.com.smartcine.entidades.Ventas</class>
    <class>sv.com.smartcine.entidades.Genero</class>
    <class>sv.com.smartcine.entidades.Usuarios</class>
    <class>sv.com.smartcine.entidades.Funciones</class>
    <class>sv.com.smartcine.entidades.Salas</class>
    <class>sv.com.smartcine.entidades.Peliculas</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cinema?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
